<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_disease_count">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>Disease Count Report</h2>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Year</th>
                                <th>Month</th>
                                <th>Name</th>
                                <th>Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <t t-esc="doc.year"/>
                                </td>
                                <td>
                                    <t t-esc="doc.month"/>
                                </td>
                                <td>
                                    <t t-esc="doc.name"/>
                                </td>
                                <td>
                                    <t t-esc="doc.count"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
